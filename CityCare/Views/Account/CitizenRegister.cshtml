@model CityCare.Models.ViewModels.CitizenRegisterViewModel
@{
    ViewData["Title"] = "Citizen Registration";
    Layout = "_PublicLayout";
    ViewData["BodyClass"] = "public-layout";
}

<div class="auth-page d-flex min-vh-100 flex-column justify-content-center align-items-center py-5">
    
    <div class="auth-header text-center mb-4">
        <h1 class="text-white fw-bold mb-2">Join CityCare</h1>
        <p class="text-white-50 fs-6">Create your citizen account to report and track issues</p>
    </div>

    <div class="card shadow-lg border-0 auth-card" style="width: 100%; max-width: 580px; border-radius: 1.25rem;">
        <div class="card-body p-4 p-md-5">

            <form asp-action="CitizenRegister" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                <div class="row g-3">
                    <div class="col-12">
                        <label class="form-label text-muted small fw-bold">FULL NAME</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0">
                                <i class="bi bi-person text-muted"></i>
                            </span>
                            <input asp-for="FullName" class="form-control bg-light border-0 border-start-0" placeholder="John Doe" />
                        </div>
                        <span asp-validation-for="FullName" class="text-danger small d-block mt-1"></span>
                    </div>

                    <div class="col-12">
                        <label class="form-label text-muted small fw-bold">EMAIL ADDRESS</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0">
                                <i class="bi bi-envelope text-muted"></i>
                            </span>
                            <input asp-for="Email" class="form-control bg-light border-0 border-start-0" placeholder="name@example.com" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small d-block mt-1"></span>
                    </div>

                    <div class="col-12">
                        <label class="form-label text-muted small fw-bold">RESIDENTIAL ADDRESS</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0">
                                <i class="bi bi-geo-alt text-muted"></i>
                            </span>
                            <textarea asp-for="Address" class="form-control bg-light border-0 border-start-0" rows="2" placeholder="Your residential address"></textarea>
                        </div>
                        <span asp-validation-for="Address" class="text-danger small d-block mt-1"></span>
                    </div>

                    <div class="col-12">
                        <label class="form-label text-muted small fw-bold">CITY</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0">
                                <i class="bi bi-building text-muted"></i>
                            </span>
                            <select asp-for="CityId" class="form-select bg-light border-0 border-start-0">
                                <option value="">Select City...</option>
                                @foreach (var city in ViewBag.Cities)
                                {
                                    <option value="@city.Id">@city.Name</option>
                                }
                            </select>
                        </div>
                        <span asp-validation-for="CityId" class="text-danger small d-block mt-1"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label text-muted small fw-bold">PASSWORD</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0">
                                <i class="bi bi-lock text-muted"></i>
                            </span>
                            <input asp-for="Password" class="form-control bg-light border-0 border-start-0" type="password" placeholder="••••••••" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger small d-block mt-1"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label text-muted small fw-bold">CONFIRM PASSWORD</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-end-0">
                                <i class="bi bi-lock-check text-muted"></i>
                            </span>
                            <input asp-for="ConfirmPassword" class="form-control bg-light border-0 border-start-0" type="password" placeholder="••••••••" />
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger small d-block mt-1"></span>
                    </div>
                </div>

                <div class="mt-4 pt-2">
                    <button type="submit" class="btn btn-primary btn-lg w-100 fw-bold shadow-sm">
                        <i class="bi bi-check-circle me-2"></i>Create Account
                    </button>
                </div>
            </form>

            <div class="text-center mt-4 pt-3 border-top">
                <span class="text-muted small">Already have an account?</span>
                <a asp-action="Login" class="text-decoration-none fw-semibold ms-1 link-primary">Log in</a>
            </div>
        </div>
    </div>
</div>
