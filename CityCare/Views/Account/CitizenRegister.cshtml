@model CityCare.Models.ViewModels.CitizenRegisterViewModel
@{
    ViewData["Title"] = "Citizen Registration";
    Layout = "_PublicLayout";
    ViewData["BodyClass"] = "public-layout";
}

<div class="auth-page d-flex min-vh-100 flex-column justify-content-center align-items-center py-5">
    
    <div class="text-center mb-4">
        <h1 class="text-white fw-bold">Join CityCare</h1>
        <p class="text-white-50 fs-5">Create your citizen account</p>
    </div>

    <div class="card shadow-lg border-0 auth-card" style="width: 100%; max-width: 550px; border-radius: 1rem;">
        <div class="card-body p-4 p-md-5">

            <form asp-action="CitizenRegister" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                <div class="row g-3">
                    <div class="col-12">
                        <label class="form-label text-muted small fw-bold">FULL NAME</label>
                        <input asp-for="FullName" class="form-control bg-light border-0" placeholder="John Doe" />
                        <span asp-validation-for="FullName" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <label class="form-label text-muted small fw-bold">EMAIL ADDRESS</label>
                        <input asp-for="Email" class="form-control bg-light border-0" placeholder="name@example.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <label class="form-label text-muted small fw-bold">ADDRESS</label>
                        <textarea asp-for="Address" class="form-control bg-light border-0" rows="2" placeholder="Your residential address"></textarea>
                        <span asp-validation-for="Address" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <label class="form-label text-muted small fw-bold">CITY</label>
                        <select asp-for="CityId" class="form-select bg-light border-0">
                            <option value="">Select City...</option>
                            @foreach (var city in ViewBag.Cities)
                            {
                                <option value="@city.Id">@city.Name</option>
                            }
                        </select>
                        <span asp-validation-for="CityId" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label text-muted small fw-bold">PASSWORD</label>
                        <input asp-for="Password" class="form-control bg-light border-0" type="password" placeholder="••••••••" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label text-muted small fw-bold">CONFIRM PASSWORD</label>
                        <input asp-for="ConfirmPassword" class="form-control bg-light border-0" type="password" placeholder="••••••••" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mt-4 pt-2">
                    <button class="btn btn-primary btn-lg w-100 fw-bold shadow-sm">Create Account</button>
                </div>
            </form>

            <div class="text-center mt-4 pt-3 border-top">
                <span class="text-muted small">Already have an account?</span>
                <a asp-action="Login" class="text-decoration-none fw-semibold ms-1">Log in</a>
            </div>
        </div>
    </div>
</div>
