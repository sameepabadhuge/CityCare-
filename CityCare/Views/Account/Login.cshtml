@model CityCare.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_PublicLayout";
    ViewData["BodyClass"] = "public-layout";
}

<div class="auth-page d-flex min-vh-100 flex-column justify-content-center align-items-center py-5">
    
    <div class="auth-header text-center mb-4">
        <div class="auth-logo-wrapper mb-3">
            <img src="~/images/logo.png" asp-append-version="true" alt="CityCare Logo" style="height: 50px; opacity: 0.9;" />
        </div>
        <h1 class="text-white fw-bold display-5 mb-2">CityCare</h1>
        <p class="text-white-50 fs-6">Welcome back, please login to continue</p>
    </div>

    <div class="card shadow-lg border-0 auth-card" style="width: 100%; max-width: 420px; border-radius: 1.25rem;">
        <div class="card-body p-4 p-md-5">
            
            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger alert-dismissible fade show py-2 small" role="alert">
                        <i class="bi bi-exclamation-circle me-2"></i>
                        Login failed. Check your credentials.
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                
                <div class="mb-3">
                    <label class="form-label text-muted small fw-bold">EMAIL ADDRESS</label>
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0">
                            <i class="bi bi-envelope text-muted"></i>
                        </span>
                        <input asp-for="Email" class="form-control form-control-lg bg-light border-0 border-start-0" placeholder="name@example.com" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small d-block mt-1"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label text-muted small fw-bold">PASSWORD</label>
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0">
                            <i class="bi bi-lock text-muted"></i>
                        </span>
                        <input asp-for="Password" class="form-control form-control-lg bg-light border-0 border-start-0" placeholder="••••••••" type="password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger small d-block mt-1"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label class="form-check-label text-muted small" asp-for="RememberMe">Remember me</label>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100 fw-bold shadow-sm mb-3">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                </button>
            </form>

            <div class="text-center mt-4 pt-3 border-top">
                <p class="text-muted small mb-3">Don't have an account?</p>
                <div class="d-flex justify-content-center gap-2 flex-wrap">
                    <a asp-action="CitizenRegister" class="text-decoration-none fw-semibold link-primary">
                        <i class="bi bi-person-plus me-1"></i>Citizen Sign Up
                    </a>
                    <span class="text-muted">•</span>
                    <a asp-action="StaffRegister" class="text-decoration-none fw-semibold link-primary">
                        <i class="bi bi-briefcase me-1"></i>Staff Sign Up
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
