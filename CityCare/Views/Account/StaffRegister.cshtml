@model CityCare.Models.ViewModels.StaffRegisterViewModel
@{
    ViewData["Title"] = "Staff Registration";
    Layout = "_PublicLayout";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height:90vh;">
    <div class="card shadow-sm" style="width:520px;">
        <div class="card-body p-4">
            <h4 class="text-center mb-4">Staff Registration</h4>

            <form asp-action="StaffRegister" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                <div class="mb-3">
                    <label class="form-label">Full Name</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">City</label>
                    <select asp-for="CityId" class="form-select">
                        <option value="">-- Select City --</option>
                        @foreach (var city in ViewBag.Cities)
                        {
                            <option value="@city.Id">@city.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CityId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Department</label>
                    <select asp-for="DepartmentId" class="form-select">
                        <option value="">-- Select Department --</option>
                        @foreach (var dep in ViewBag.Departments)
                        {
                            <option value="@dep.Id">@dep.Name</option>
                        }
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Staff Access Code</label>
                    <input asp-for="StaffAccessCode" class="form-control" placeholder="CC-KDY-WTR-2026" />
                    <span asp-validation-for="StaffAccessCode" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Password</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Confirm Password</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <button class="btn btn-primary w-100">Register</button>
            </form>

            <div class="text-center mt-3">
                <small>Already have an account? <a asp-action="Login">Login</a></small>
            </div>
        </div>
    </div>
</div>
