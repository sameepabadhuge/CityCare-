@model CityCare.Models.ViewModels.IssueDetailsViewModel
@using CityCare.Models.Entities

@{
    ViewData["Title"] = "Complaint Details";
    var issue = Model.Issue;

    // Use Bootstrap 5 subtle colors or custom classes to match the design
    string statusBadgeClass = issue.Status switch
    {
        IssueStatus.Pending => "bg-danger",
        IssueStatus.InProgress => "bg-primary",
        IssueStatus.Resolved => "bg-success",
        _ => "bg-secondary"
    };

    string statusIcon = issue.Status switch
    {
        IssueStatus.Pending => "bi-hourglass-split",
        IssueStatus.InProgress => "bi-arrow-repeat",
        IssueStatus.Resolved => "bi-check-circle-fill",
        _ => "bi-question-circle"
    };
}

<div class="container py-4" style="max-width: 1140px;">

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm border-0 mb-4" role="alert">
             <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm border-0 mb-4" role="alert">
             <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Top Navigation -->
    <div class="d-flex justify-content-between align-items-center mb-4 pb-3 border-bottom">
        <div>
            <h1 class="h3 fw-bold mb-1">My Complaint Details</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 bg-transparent p-0">
                    <li class="breadcrumb-item"><a asp-action="Dashboard" class="text-decoration-none text-muted">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">#@issue.Id</li>
                </ol>
            </nav>
        </div>
        <a asp-action="Dashboard" class="btn btn-outline-secondary px-3 shadow-sm rounded-pill fw-medium">
            <i class="bi bi-arrow-left me-1"></i> Return to Dashboard
        </a>
    </div>

    <div class="row g-4">
        <!-- Left Column: Details -->
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-3 mb-4 section-card" style="border-top: 5px solid #EAB308;">
                <div class="card-body p-4 p-lg-5">
                    
                    <div class="d-flex flex-wrap align-items-start justify-content-between gap-3 mb-4">
                        <div>
                             <div class="d-flex align-items-center gap-2 mb-2">
                                <span class="badge bg-light text-dark border px-2">@issue.Category</span>
                                <span class="text-muted small">Reported on @issue.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy")</span>
                             </div>
                             <h2 class="fw-bold text-dark mb-0">@issue.Title</h2>
                        </div>
                        <span class="badge @statusBadgeClass rounded-pill px-3 py-2 d-flex align-items-center gap-2 shadow-sm">
                            <i class="bi @statusIcon"></i> @issue.Status
                        </span>
                    </div>

                    <div class="mb-4">
                        <label class="d-flex align-items-center gap-2 text-muted fw-bold text-uppercase small mb-2">
                            <i class="bi bi-card-text"></i> Description
                        </label>
                        <div class="bg-light p-4 rounded-3 border">
                            <p class="mb-0 text-secondary" style="white-space: pre-wrap; line-height: 1.7;">@issue.Description</p>
                        </div>
                    </div>
                    
                    <div class="row g-4">
                         <div class="col-md-6">
                            <div class="d-flex align-items-start gap-3 p-3 rounded-3 border h-100 bg-white">
                                <div class="text-warning opacity-75 display-6">
                                    <i class="bi bi-geo-alt"></i>
                                </div>
                                <div>
                                    <label class="d-block small text-muted fw-bold text-uppercase mb-1">Location</label>
                                    <div class="fw-bold text-dark">@issue.City?.Name</div>
                                    <div class="small text-muted">@issue.LocationText</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-start gap-3 p-3 rounded-3 border h-100 bg-white">
                                <div class="text-warning opacity-75 display-6">
                                    <i class="bi bi-telephone"></i>
                                </div>
                                <div>
                                    <label class="d-block small text-muted fw-bold text-uppercase mb-1">My Contact Info</label>
                                    @if (!string.IsNullOrWhiteSpace(issue.ContactPhone))
                                    {
                                        <div class="fw-bold text-dark">@issue.ContactPhone</div>
                                        <div class="small text-muted">Provided for updates</div>
                                    }
                                    else
                                    {
                                        <div class="text-muted fst-italic">Not provided</div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- Evidence Section -->
            <div class="card shadow-sm border-0 rounded-3 overflow-hidden">
                <div class="card-header bg-white py-3 px-4 border-bottom-0">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-images me-2 text-primary opacity-75"></i>Evidence Gallery</h5>
                </div>
                <div class="card-body p-4 pt-0">
                    @if (issue.Images == null || !issue.Images.Any(i => !string.IsNullOrWhiteSpace(i.ImageUrl)))
                    {
                        <div class="text-center py-5 bg-light rounded-3 border border-dashed">
                            <i class="bi bi-image text-muted opacity-25 display-4 mb-2"></i>
                            <div class="text-muted">No images were uploaded with this complaint.</div>
                        </div>
                    }
                    else
                    {
                        <div class="row g-3">
                            @foreach (var img in issue.Images.Where(i => !string.IsNullOrWhiteSpace(i.ImageUrl)))
                            {
                                var modalId = $"imgModal_{img.Id}";
                                <div class="col-sm-6 col-md-4 col-lg-3">
                                    <button type="button" class="btn p-0 w-100 shadow-sm rounded-3 overflow-hidden position-relative group-hover-zoom" 
                                            data-bs-toggle="modal" data-bs-target="#@modalId">
                                        <div class="ratio ratio-1x1">
                                            <img src="@img.ImageUrl" class="object-fit-cover w-100 h-100 transition-transform" alt="Evidence" loading="lazy" />
                                        </div>
                                        <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center bg-dark bg-opacity-50 opacity-0 group-hover-opacity transition-opacity">
                                            <i class="bi bi-zoom-in text-white fs-4"></i>
                                        </div>
                                    </button>

                                    <!-- Full Screen Modal -->
                                     <div class="modal fade" id="@modalId" tabindex="-1" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered modal-lg">
                                            <div class="modal-content bg-transparent border-0 shadow-none">
                                                <button type="button" class="btn-close btn-close-white position-absolute top-0 end-0 m-3 z-3 bg-dark p-2 rounded-circle" data-bs-dismiss="modal"></button>
                                                <div class="modal-body p-0 text-center">
                                                    <img src="@img.ImageUrl" class="img-fluid rounded shadow-lg" style="box-shadow: 0 0 50px rgba(0,0,0,0.5);" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Right Column: Status & Rating -->
        <div class="col-lg-4">
             <div class="sticky-top" style="top: 2rem;">
                 
                 <!-- Status Timeline/Card -->
                 <div class="card shadow-sm border-0 rounded-3 mb-4" style="border-top: 5px solid #198754;">
                     <div class="card-body p-4">
                         <h6 class="fw-bold text-uppercase text-success small mb-3 ls-1">Current Status</h6>
                         
                         <div class="d-flex align-items-center mb-4">
                             <div class="flex-shrink-0">
                                 <div class="rounded-circle p-3 d-flex align-items-center justify-content-center @statusBadgeClass text-white" style="width: 60px; height: 60px;">
                                     <i class="bi @statusIcon fs-3"></i>
                                 </div>
                             </div>
                             <div class="flex-grow-1 ms-3">
                                 <h4 class="mb-0 fw-bold">@issue.Status</h4>
                                 <div class="small text-muted">Last updated: @DateTime.Now.ToShortDateString()</div>
                             </div>
                         </div>
                         
                         <div class="alert bg-light border-0 small text-muted mb-0">
                             <i class="bi bi-info-circle me-1"></i>
                             @if(issue.Status == IssueStatus.Resolved)
                             {
                                 <span>This issue has been marked as resolved. Please rate your experience below.</span>
                             }
                             else
                             {
                                 <span>Our team is working on your request. You will be notified of any updates.</span>
                             }
                         </div>
                     </div>
                 </div>

                <!-- Rating Section -->
                <div class="card shadow-sm border-0 rounded-3" style="border-top: 5px solid #0d6efd;">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="mb-0 fw-bold text-primary">Feedback</h5>
                             @if (issue.Status != IssueStatus.Resolved)
                             {
                                 <span class="badge bg-light text-muted border">Locked</span>
                             }
                        </div>

                        @if (issue.Status != IssueStatus.Resolved)
                        {
                            <div class="text-center py-4 text-muted">
                                <i class="bi bi-star display-4 opacity-25 d-block mb-2"></i>
                                <span class="small">Rating will be available once the issue is resolved.</span>
                            </div>
                        }
                        else if (issue.Rating != null)
                        {
                            <div class="text-center py-3">
                                <div class="text-warning mb-2" style="letter-spacing: 5px;">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="bi @(i <= issue.Rating.Stars ? "bi-star-fill" : "bi-star") fs-3"></i>
                                    }
                                </div>
                                <div class="fw-medium text-dark">Thank you for your feedback!</div>
                                @if (!string.IsNullOrWhiteSpace(issue.Rating.Comment))
                                {
                                    <div class="mt-3 p-3 bg-light rounded text-start text-muted fst-italic border-start border-4 border-warning">
                                        " @issue.Rating.Comment "
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <form asp-action="Rate" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="IssueId" value="@issue.Id" />

                                <div class="mb-3 text-center">
                                    <label class="form-label fw-medium mb-1">How was our service?</label>
                                    <div class="rating-stars d-flex justify-content-center flex-row-reverse gap-2">
                                        @for(int i=5; i>=1; i--)
                                        {
                                            <input type="radio" class="btn-check" name="Stars" id="star-@i" value="@i" required>
                                            <label class="btn btn-outline-warning border-0 p-1" for="star-@i">
                                                <i class="bi bi-star fs-2"></i>
                                            </label>
                                        }
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <textarea class="form-control bg-light border-0" name="Comment" rows="3" placeholder="Additional comments (optional)..."></textarea>
                                </div>

                                <button type="submit" class="btn btn-warning w-100 fw-bold text-white shadow-sm">
                                    Submit Feedback
                                </button>
                            </form>
                        }
                    </div>
                </div>

             </div>
        </div>
    </div>
</div>

<style>
    .ls-1 { letter-spacing: 1px; }
    .ratio-1x1 { --bs-aspect-ratio: 100%; }
    
    .transaction-transform { transition: transform 0.3s ease; }
    .group-hover-zoom:hover img { transform: scale(1.05); }
    
    .group-hover-opacity { opacity: 0; transition: opacity 0.3s ease; }
    .group-hover-zoom:hover .group-hover-opacity { opacity: 1; }

    /* Star Rating Logic for CSS-only hover not perfect without JS logic or specific CSS approach, 
       simplified to standard radio approach visually */
    .rating-stars input:checked ~ label i::before { content: "\F586"; /* star-fill */ }
    .rating-stars label:hover i::before,
    .rating-stars label:hover ~ label i::before { content: "\F586" !important; opacity: 0.8; }
</style>
