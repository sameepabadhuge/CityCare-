@model CityCare.Models.ViewModels.CitizenDashboardViewModel
@{
    ViewData["Title"] = "Citizen Dashboard";
}

<div class="container citizen-page">

    @if (TempData["Success"] != null)
    {
        <div class="alert-cc success">
            <i class="bi bi-check-circle-fill"></i>
            <span>@TempData["Success"]</span>
            <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="table-cc-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="page-title">My Complaints</h1>
                <p class="page-subtitle">Track the status of your reported issues</p>
            </div>

            <a class="btn btn-cc-primary"
               asp-controller="Issue"
               asp-action="Create">
                <i class="bi bi-plus-lg"></i> Report New Issue
            </a>
        </div>
    </div>

    <div class="table-cc-container">
        @if (!Model.Issues.Any())
        {
            <div class="text-center py-5" style="padding: 3rem 1.5rem;">
                <div style="font-size: 3rem; margin-bottom: 1rem;">📝</div>
                <h5 class="fw-bold" style="color: var(--muted);">No issues reported yet</h5>
                <p class="text-muted mb-4">When you spot a problem in your city, report it here.</p>
                <a class="btn btn-cc-outline" asp-controller="Issue" asp-action="Create">
                    <i class="bi bi-pencil-square"></i> Report First Issue
                </a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover table-cc align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Category</th>
                            <th>City</th>
                            <th>Dept. Contact</th>
                            <th>Status</th>
                            <th>Date</th>
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Issues)
                        {
                            // ✅ FIX: Replace switch-expression with safe if/else block
                            string badgeClass = "badge-pending";
                            string badgeIcon = "bi-question-circle";

                            if (item.Status == CityCare.Models.Entities.IssueStatus.Pending)
                            {
                                badgeClass = "badge-pending";
                                badgeIcon = "bi-hourglass-split";
                            }
                            else if (item.Status == CityCare.Models.Entities.IssueStatus.InProgress)
                            {
                                badgeClass = "badge-inprogress";
                                badgeIcon = "bi-arrow-repeat";
                            }
                            else if (item.Status == CityCare.Models.Entities.IssueStatus.Resolved)
                            {
                                badgeClass = "badge-resolved";
                                badgeIcon = "bi-check-circle-fill";
                            }

                            <tr>
                                <td class="fw-semibold">@item.Title</td>
                                <td><span class="badge-category">@item.Category</span></td>
                                <td>@item.City?.Name</td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(item.ContactPhone))
                                    {
                                        <a href="tel:@item.ContactPhone" class="text-decoration-none">@item.ContactPhone</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge-cc @badgeClass">
                                        <i class="bi @badgeIcon"></i> @item.Status
                                    </span>
                                </td>
                                <td class="text-muted small">@item.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy")</td>
                                <td class="text-end">
                                    <a class="btn btn-cc-outline btn-sm"
                                       asp-controller="Issue"
                                       asp-action="Details"
                                       asp-route-id="@item.Id">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
