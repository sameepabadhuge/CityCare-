<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CityCare</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/landing.css" asp-append-version="true" />
</head>

@{
    var extraBodyClass = ViewData["BodyClass"] as string;
    var bodyClass = string.IsNullOrWhiteSpace(extraBodyClass)
        ? "app-shell"
        : $"app-shell {extraBodyClass}";
}
<body class="@bodyClass">
    <!-- Public Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light public-navbar">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2 fw-bold"
                   asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" asp-append-version="true" alt="CityCare Logo" style="height: 45px;" />
                    <span>CityCare</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="ms-auto d-flex align-items-center gap-3">
                        <a class="nav-link fw-semibold"
                           asp-controller="Account"
                           asp-action="Login">
                            <i class="bi bi-box-arrow-in-right me-1"></i>Sign In
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="public-footer text-white-50 mt-auto">
        <div class="container footer-content">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    <p class="mb-0 small">&copy; @DateTime.Now.Year CityCare. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-center text-md-end mt-3 mt-md-0">
                    <p class="mb-0 small">
                        <a href="#" class="text-white-50 text-decoration-none me-3">Privacy</a>
                        <a href="#" class="text-white-50 text-decoration-none">Terms</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
