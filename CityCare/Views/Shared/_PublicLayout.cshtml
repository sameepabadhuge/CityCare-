<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CityCare</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/landing.css" asp-append-version="true" />
</head>

@{
        var extraBodyClass = ViewData["BodyClass"] as string;
        var bodyClass = string.IsNullOrWhiteSpace(extraBodyClass)
                ? "app-shell"
                : $"app-shell {extraBodyClass}";
}

<body class="@bodyClass">
    <!-- ✅ Public Navbar (same as whole project) -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light brand-gradient-bg">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2"
                   asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" asp-append-version="true" alt="CityCare Logo" style="height: 44px; width:auto;" />
                    <span>CityCare</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#publicNav"
                        aria-controls="publicNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="publicNav">
                    <!-- LEFT -->
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                        </li>
                    </ul>

                    <!-- RIGHT -->
                    <div class="d-flex align-items-center gap-2">
                        <a class="btn btn-outline-light"
                           asp-controller="Account" asp-action="Login">
                            <i class="bi bi-box-arrow-in-right me-1"></i> Sign In
                        </a>

                        <a class="btn btn-warning fw-semibold"
                           asp-controller="Account" asp-action="CitizenRegister">
                            <i class="bi bi-person-plus me-1"></i> Register
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- ✅ Page content -->
    <main role="main" class="flex-grow-1">
        @RenderBody()
    </main>

    <!-- ✅ ONE footer for all public pages -->
    @await Html.PartialAsync("_Footer")

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
