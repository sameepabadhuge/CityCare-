<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CityCare</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/landing.css" asp-append-version="true" />
</head>

@{
    var extraBodyClass = ViewData["BodyClass"] as string;
    var bodyClass = string.IsNullOrWhiteSpace(extraBodyClass)
        ? "app-shell"
        : $"app-shell {extraBodyClass}";
}
<body class="@bodyClass">
    <!-- ✅ Public Navbar (only logo + name) -->
    <header>
        <nav class="navbar navbar-light brand-gradient-bg">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2"
                   asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" asp-append-version="true" alt="CityCare Logo" style="height: 60px;" />
                    <strong>CityCare</strong>
                </a>

                <!-- Optional: show Get Started button only on Landing page -->
                @if (ViewData["ShowGetStarted"] as bool? == true)
                {
                    <a class="btn btn-primary btn-sm"
                       asp-controller="Account"
                       asp-action="Login">
                        Get Started
                    </a>
                }
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted brand-gradient-footer">
        <div class="container footer-content">
             &copy; 2026 - CityCare
         </div>
     </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
