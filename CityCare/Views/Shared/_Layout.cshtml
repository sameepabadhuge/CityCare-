@using CityCare.Data
@inject AppDbContext Db

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CityCare</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CityCare.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/landing.css" asp-append-version="true" />

    @{
        var isCitizenOrStaffPage = !User.IsInRole("Admin");
    }
    @if (isCitizenOrStaffPage && User.Identity?.IsAuthenticated == true)
    {
        <link rel="stylesheet" href="~/css/citizen-theme.css" asp-append-version="true" />
    }
</head>

<body class="app-shell">
    @{
        int unreadCount = 0;

        if (User.Identity != null && User.Identity.IsAuthenticated)
        {
            var uid = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

            if (!string.IsNullOrEmpty(uid))
            {
                unreadCount = Db.Notifications.Count(n => n.UserId == uid && !n.IsRead);
            }
        }
    }

    <header>
        <nav class="navbar navbar-expand-sm navbar-light @(User.IsInRole("Admin") ? "admin-navbar" : "brand-gradient-bg")">
            <div class="container">
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Admin" asp-action="Dashboard">
                            <img src="~/images/logo.png" asp-append-version="true" alt="CityCare Logo" style="height: 44px; width: auto;" />
                            <span>CityCare</span>
                        </a>
                    }
                    else if (User.IsInRole("Staff"))
                    {
                        <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Staff" asp-action="Dashboard">
                            <img src="~/images/logo.png" asp-append-version="true" alt="CityCare Logo" style="height: 44px; width: auto;" />
                            <span>CityCare</span>
                        </a>
                    }
                    else
                    {
                        <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Issue" asp-action="Dashboard">
                            <img src="~/images/logo.png" asp-append-version="true" alt="CityCare Logo" style="height: 44px; width: auto;" />
                            <span>CityCare</span>
                        </a>
                    }
                }
                else
                {
                    <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                        <img src="~/images/logo.png" asp-append-version="true" alt="CityCare Logo" style="height: 44px; width: auto;" />
                        <span>CityCare</span>
                    </a>
                }

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- LEFT -->
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Home</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        Admin
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">Dashboard</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Cities">Cities</a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Departments">Departments</a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="StaffCodes">Staff Codes</a></li>
                                    </ul>
                                </li>
                            }
                            else if (User.IsInRole("Staff"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Staff" asp-action="Dashboard">Home</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Issue" asp-action="Dashboard">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                                </li>
                            }
                        }
                    </ul>

                    <!-- RIGHT -->
                    <ul class="navbar-nav align-items-center">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <!-- Bell -->
                            <li class="nav-item me-3 position-relative">
                                <a class="nav-link" asp-controller="Notification" asp-action="Index" title="Notifications">
                                    <i class="bi bi-bell"></i>
                                    <span id="notificationBadge"
                                          class="@(unreadCount > 0 ? "position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" : "d-none")">
                                        @unreadCount
                                    </span>
                                </a>
                            </li>

                            <!-- Logout -->
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-cc-logout btn-sm">
                                        <i class="bi bi-box-arrow-right"></i> Logout
                                    </button>
                                </form>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- ✅ Unified Footer (Same for all pages) -->
    @await Html.PartialAsync("_Footer")

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        <script>
            // Auto-refresh notification count every 10 seconds
            setInterval(function () {
                fetch('/Notification/GetUnreadCount')
                    .then(response => response.json())
                    .then(data => {
                        const badge = document.getElementById('notificationBadge');
                        if (data.count > 0) {
                            badge.textContent = data.count;
                            badge.classList.remove('d-none');
                            badge.classList.add('position-absolute', 'top-0', 'start-100', 'translate-middle', 'badge', 'rounded-pill', 'bg-danger');
                        } else {
                            badge.classList.add('d-none');
                        }
                    })
                    .catch(error => console.error('Error fetching notification count:', error));
            }, 10000);
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
