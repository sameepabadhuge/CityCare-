@{
    ViewData["Title"] = "CityCare";
    Layout = "_PublicLayout";
}

<div class="landing-page">

    <!-- HERO -->
    <section class="landing-hero">
        <div class="hero-decoration"></div>

        <div class="container hero-content text-center">
            <h1 class="hero-title mb-3">
                Welcome to <span class="hero-accent">CityCare</span>
            </h1>

            <p class="hero-subtitle text-white-50 mb-5">
                Together, we care for the city. Report, track, and resolve urban issues collaboratively.
            </p>

            <div class="d-flex justify-content-center gap-3 flex-wrap">
                <a class="btn btn-lg px-5 py-3 rounded-pill hero-btn-primary"
                   asp-controller="Account"
                   asp-action="Login">
                    <i class="bi bi-box-arrow-in-right me-2"></i> Get Started
                </a>

                <a class="btn btn-lg px-5 py-3 rounded-pill hero-btn-secondary"
                   asp-controller="Home"
                   asp-action="About">
                    <i class="bi bi-info-circle me-2"></i> Learn More
                </a>
            </div>
        </div>
    </section>

    <!-- FEATURES -->
    <section class="features-section">
        <div class="container">
            <div class="row g-4">
                <div class="col-md-6 col-lg-3">
                    <div class="feature-card h-100">
                        <div class="feature-icon">
                            <i class="bi bi-exclamation-triangle"></i>
                        </div>
                        <h5 class="mt-3 fw-bold">Report Issues</h5>
                        <p class="text-white-50 small">
                            Report city problems easily with images and descriptions.
                        </p>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3">
                    <div class="feature-card h-100">
                        <div class="feature-icon">
                            <i class="bi bi-eye"></i>
                        </div>
                        <h5 class="mt-3 fw-bold">Track Progress</h5>
                        <p class="text-white-50 small">
                            Follow issue status updates in real time.
                        </p>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3">
                    <div class="feature-card h-100">
                        <div class="feature-icon">
                            <i class="bi bi-people"></i>
                        </div>
                        <h5 class="mt-3 fw-bold">Community Driven</h5>
                        <p class="text-white-50 small">
                            Citizens and staff working together for a better city.
                        </p>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3">
                    <div class="feature-card h-100">
                        <div class="feature-icon">
                            <i class="bi bi-shield-check"></i>
                        </div>
                        <h5 class="mt-3 fw-bold">Secure & Reliable</h5>
                        <p class="text-white-50 small">
                            Enterprise-grade security for your data.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA -->
    <section class="cta-section">
        <div class="container text-center">
            <div class="cta-card mx-auto" style="max-width: 900px;">
                <h2 class="fw-bold mb-3">Ready to Make a Difference?</h2>
                <p class="text-white-50 mb-4">
                    Join as a citizen or staff member and help improve our city.
                </p>

                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <a class="btn btn-lg px-4 py-2 rounded-pill cta-btn-primary"
                       asp-controller="Account"
                       asp-action="CitizenRegister">
                        <i class="bi bi-person-plus me-2"></i> Citizen Sign Up
                    </a>

                    <a class="btn btn-lg px-4 py-2 rounded-pill cta-btn-outline"
                       asp-controller="Account"
                       asp-action="StaffRegister">
                        <i class="bi bi-briefcase me-2"></i> Staff Sign Up
                    </a>
                </div>
            </div>
        </div>
    </section>

</div>
