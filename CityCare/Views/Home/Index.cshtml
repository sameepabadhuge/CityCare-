@{
    ViewData["Title"] = "CityCare";
    Layout = "_PublicLayout";
    ViewData["BodyClass"] = "public-layout";
}

<div class="landing-hero">
    <div class="container py-5">
        <div class="row align-items-center g-5">

            <!-- LEFT SIDE -->
            <div class="col-lg-6">
                <h1 class="fw-bold">
                    Together we keep <span class="hero-highlight">CityCare.</span>
                </h1>

                <p class="mt-3">
                    CityCare is your smart way to report city issues, track updates, and stay informed.
                    Citizens can submit complaints and follow progress while staff handle issues efficiently.
                </p>

                <a class="btn btn-hero px-4 mt-3"
                   asp-controller="Account"
                   asp-action="Login">
                    Get Started
                </a>
            </div>

            <!-- RIGHT SIDE -->
            <div class="col-lg-6 text-center">
                <img src="~/images/landing-hero.png"
                     class="img-fluid rounded shadow"
                     alt="CityCare landing illustration" style="max-height:360px; object-fit:contain;" />
            </div>

        </div>
    </div>
</div>
