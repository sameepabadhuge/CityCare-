@{
    ViewData["Title"] = "CityCare";
    Layout = "_PublicLayout";
    ViewData["BodyClass"] = "public-layout";
}

<div class="landing-hero min-vh-100 d-flex flex-column justify-content-center">
    <div class="container py-5">
        <div class="row justify-content-center text-center">

            <div class="col-12 col-lg-8">
                <h1 class="fw-bold display-4 text-white mb-3">
                    Welcome to CityCare
                </h1>

                <p class="fs-4 text-white-50 mb-5">
                    Together, we care for the City.
                </p>

                <div class="d-flex justify-content-center gap-3">
                    <a class="btn btn-primary btn-lg px-5 py-3 fw-bold rounded-pill shadow-lg"
                       asp-controller="Account"
                       asp-action="Login">
                        Get Started
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>
