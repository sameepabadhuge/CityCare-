@model CityCare.Models.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="admin-page">
    <div class="container">

        <div class="admin-header mb-4">
            <h1 class="mb-1">Admin Overview</h1>
            <p>Manage system data and settings.</p>
        </div>

        <div class="stat-grid mb-4">
            <!-- Cities Card -->
            <div class="stat-card">
                <div class="stat-top">
                    <div>
                        <p class="stat-title">Cities</p>
                        <p class="stat-sub">Locations served</p>
                    </div>
                    <div class="stat-icon">🏙️</div>
                </div>

                <div class="d-flex align-items-end justify-content-between mt-3">
                    <p class="stat-number">@Model.TotalCities</p>
                    <a asp-action="Cities" class="btn btn-cc-primary">Manage</a>
                </div>
            </div>

            <!-- Departments Card -->
            <div class="stat-card">
                <div class="stat-top">
                    <div>
                        <p class="stat-title">Departments</p>
                        <p class="stat-sub">Organizational units</p>
                    </div>
                    <div class="stat-icon">🏢</div>
                </div>

                <div class="d-flex align-items-end justify-content-between mt-3">
                    <p class="stat-number">@Model.TotalDepartments</p>
                    <a asp-action="Departments" class="btn btn-cc-primary">Manage</a>
                </div>
            </div>

            <!-- Staff Access Card -->
            <div class="stat-card">
                <div class="stat-top">
                    <div>
                        <p class="stat-title">Staff Access</p>
                        <p class="stat-sub">Access codes generated</p>
                    </div>
                    <div class="stat-icon">🪪</div>
                </div>

                <div class="d-flex align-items-end justify-content-between mt-3">
                    <p class="stat-number">@Model.TotalStaffCodes</p>
                    <a asp-action="StaffCodes" class="btn btn-cc-primary">Manage</a>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="quick-actions-section">
            <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
                <div>
                    <p class="quick-actions-title">Quick Actions</p>
                    <p class="quick-actions-subtitle">Common tasks (faster workflow)</p>
                </div>

                <div class="quick-actions-buttons">
                    <a asp-action="CreateCity" class="btn btn-cc-primary">+ Add City</a>
                    <a asp-action="CreateDepartment" class="btn btn-cc-primary">+ Add Department</a>
                    <a asp-action="CreateStaffCode" class="btn btn-cc-primary">⚡ Generate Code</a>
                </div>
            </div>
        </div>

    </div>
</div>