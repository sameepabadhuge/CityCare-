@model CityCare.Models.Entities.Department
@{
    ViewData["Title"] = "Create Department";
}

<div class="admin-page">
    <div class="container" style="max-width: 600px;">
        <div class="admin-header mb-4">
            <h1>Create New Department</h1>
            <p>Add a new department to the system.</p>
        </div>

        <div class="form-cc-container">
            <form asp-action="CreateDepartment" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-4">
                    <label asp-for="Name" class="form-label-cc">Department Name</label>
                    <input asp-for="Name" class="form-control-cc w-100" placeholder="e.g., Electricity" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Code" class="form-label-cc">Department Code</label>
                    <input asp-for="Code" class="form-control-cc w-100" placeholder="e.g., ELC" maxlength="10" />
                    <span asp-validation-for="Code" class="text-danger small"></span>
                    <div class="form-text-cc">3-letter code to identify this department (e.g., ELC, WTR)</div>
                </div>

                <div class="mb-4">
                    <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input" checked id="IsActive" />
                        <label asp-for="IsActive" class="form-check-label" for="IsActive">Active</label>
                    </div>
                </div>

                <div class="d-flex gap-2 justify-content-end">
                    <a asp-action="Departments" class="btn btn-cc-outline">Cancel</a>
                    <button type="submit" class="btn btn-cc-primary">
                        <i class="bi bi-plus-lg"></i> Create Department
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>