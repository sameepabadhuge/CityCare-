@model CityCare.Models.Entities.City
@{
    ViewData["Title"] = "Edit City";
}

<div class="admin-page">
    <div class="container" style="max-width: 600px;">
        <div class="admin-header mb-4">
            <h1>Edit City</h1>
            <p>Update city information.</p>
        </div>

        <div class="form-cc-container">
            <form asp-action="EditCity" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-4">
                    <label asp-for="Name" class="form-label-cc">City Name</label>
                    <input asp-for="Name" class="form-control-cc w-100" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Code" class="form-label-cc">City Code</label>
                    <input asp-for="Code" class="form-control-cc w-100" maxlength="10" />
                    <span asp-validation-for="Code" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input" id="IsActive" />
                        <label asp-for="IsActive" class="form-check-label" for="IsActive">Active</label>
                    </div>
                </div>

                <div class="d-flex gap-2 justify-content-end">
                    <a asp-action="Cities" class="btn btn-cc-outline">Cancel</a>
                    <button type="submit" class="btn btn-cc-primary">
                        <i class="bi bi-check-lg"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>