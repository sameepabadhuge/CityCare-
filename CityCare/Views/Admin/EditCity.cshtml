@model CityCare.Models.Entities.City
@{
    ViewData["Title"] = "Edit City";
}

<div class="container py-4" style="max-width:600px;">
    <h3 class="mb-4">Edit City</h3>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="EditCity" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">City Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Code" class="form-label">City Code</label>
                    <input asp-for="Code" class="form-control" maxlength="10" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label">Active</label>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-action="Cities" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>