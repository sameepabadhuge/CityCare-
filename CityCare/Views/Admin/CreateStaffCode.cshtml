@model CityCare.Models.ViewModels.CreateStaffCodeViewModel
@{
    ViewData["Title"] = "Generate Staff Access Code";
}

<div class="admin-page">
    <div class="container" style="max-width: 600px;">
        <div class="admin-header mb-4">
            <h1>Generate Staff Access Code</h1>
            <p>Create a new access code for staff registration.</p>
        </div>

        <div class="form-cc-container">
            <form asp-action="CreateStaffCode" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-4">
                    <label class="form-label-cc">City</label>
                    <select asp-for="CityId" class="form-select-cc w-100">
                        <option value="">-- Select City --</option>
                        @foreach (var city in ViewBag.Cities)
                        {
                            <option value="@city.Id">@city.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CityId" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label-cc">Department</label>
                    <select asp-for="DepartmentId" class="form-select-cc w-100">
                        <option value="">-- Select Department --</option>
                        @foreach (var dept in ViewBag.Departments)
                        {
                            <option value="@dept.Id">@dept.Name</option>
                        }
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Year" class="form-label-cc">Year</label>
                    <input asp-for="Year" class="form-control-cc w-100" type="number" />
                    <span asp-validation-for="Year" class="text-danger small"></span>
                    <div class="form-text-cc">Code format: CC-{CityCode}-{DeptCode}-{Year}</div>
                </div>

                <div class="mb-4">
                    <label asp-for="StaffPhone" class="form-label-cc">Contact Mobile No (optional)</label>
                    <input asp-for="StaffPhone" class="form-control-cc w-100" placeholder="e.g., 0771234567" maxlength="20" />
                    <span asp-validation-for="StaffPhone" class="text-danger small"></span>
                    <div class="form-text-cc">Shared with citizens for contacting the staff member</div>
                </div>

                <div class="d-flex gap-2 justify-content-end">
                    <a asp-action="StaffCodes" class="btn btn-cc-outline">Cancel</a>
                    <button type="submit" class="btn btn-cc-primary">
                        <i class="bi bi-key"></i> Generate Code
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>