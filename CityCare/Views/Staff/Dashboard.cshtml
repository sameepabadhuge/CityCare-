@model CityCare.Models.ViewModels.StaffDashboardViewModel
@{
    ViewData["Title"] = "Staff Dashboard";
}

<div class="container citizen-page">
    <div class="table-cc-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="page-title">Incoming Complaints</h1>
                <p class="page-subtitle">Manage and resolve reported issues in your area</p>
            </div>
        </div>
    </div>

    <!-- Filter Tabs -->
    <div class="card-cc mb-4 no-hover" style="border: none; box-shadow: none; background: transparent;">
        <div class="d-flex gap-2 flex-wrap">
            @{
                string active = Model.Filter?.ToLower() ?? "all";
            }

            <a class="btn @(active == "all" ? "btn-cc-primary" : "btn-cc-outline")"
               asp-action="Dashboard" asp-route-filter="all">
               <i class="bi bi-list-ul"></i> All Issues
            </a>

            <a class="btn @(active == "pending" ? "btn-cc-primary" : "btn-cc-outline")"
               asp-action="Dashboard" asp-route-filter="pending">
               <i class="bi bi-hourglass-split"></i> Pending
            </a>

            <a class="btn @(active == "inprogress" ? "btn-cc-primary" : "btn-cc-outline")"
               asp-action="Dashboard" asp-route-filter="inprogress">
               <i class="bi bi-arrow-repeat"></i> In Progress
            </a>

            <a class="btn @(active == "resolved" ? "btn-cc-primary" : "btn-cc-outline")"
               asp-action="Dashboard" asp-route-filter="resolved">
               <i class="bi bi-check-circle"></i> Resolved
            </a>
        </div>
    </div>

    <!-- Issues Table -->
    <div class="table-cc-container">
        <div class="table-cc-header">
            <h5 class="mb-0" style="color: var(--text); font-weight: 700;">Issue List</h5>
        </div>

        @if (!Model.Issues.Any())
        {
            <div style="text-align: center; padding: 3rem 1.5rem;">
                <div style="font-size: 3rem; margin-bottom: 1rem;">📭</div>
                <h5 style="font-weight: 700; color: var(--muted);">No complaints found</h5>
                <p class="text-muted mb-0">There are no issues matching the selected filter.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover table-cc align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Category</th>
                            <th>City</th>
                            <th>Citizen</th>
                            <th>Status</th>
                            <th>Date</th>
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Issues)
                        {
                            string badgeClass = item.Status switch
                            {
                                CityCare.Models.Entities.IssueStatus.Pending => "badge-pending",
                                CityCare.Models.Entities.IssueStatus.InProgress => "badge-inprogress",
                                CityCare.Models.Entities.IssueStatus.Resolved => "badge-resolved",
                                _ => "badge-pending"
                            };

                            string statusIcon = item.Status switch
                            {
                                CityCare.Models.Entities.IssueStatus.Pending => "bi-hourglass-split",
                                CityCare.Models.Entities.IssueStatus.InProgress => "bi-arrow-repeat",
                                CityCare.Models.Entities.IssueStatus.Resolved => "bi-check-circle-fill",
                                _ => "bi-question-circle"
                            };

                            <tr>
                                <td class="fw-semibold">@item.Title</td>
                                <td><span class="badge-category">@item.Category</span></td>
                                <td>@item.City?.Name</td>
                                <td>@item.Citizen?.FullName</td>
                                <td>
                                    <span class="badge-cc @badgeClass">
                                        <i class="bi @statusIcon"></i> @item.Status
                                    </span>
                                </td>
                                <td class="text-muted small">@item.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy")</td>
                                <td class="text-end">
                                    <a class="btn btn-cc-outline btn-sm"
                                       asp-controller="Staff"
                                       asp-action="Details"
                                       asp-route-id="@item.Id">
                                        <i class="bi bi-eye"></i> Review
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
