@model CityCare.Models.ViewModels.StaffIssueDetailsViewModel
@using CityCare.Models.Entities

@{
    ViewData["Title"] = "Complaint Details";
    var issue = Model.Issue;

    string statusBadgeClass = issue.Status switch
    {
        IssueStatus.Pending => "badge-pending",
        IssueStatus.InProgress => "badge-inprogress",
        IssueStatus.Resolved => "badge-resolved",
        _ => "badge-pending"
    };

    string statusIcon = issue.Status switch
    {
        IssueStatus.Pending => "bi-hourglass-split",
        IssueStatus.InProgress => "bi-arrow-repeat",
        IssueStatus.Resolved => "bi-check-circle-fill",
        _ => "bi-question-circle"
    };
}

<div class="container citizen-page" style="max-width: 1200px;">

    @if (TempData["Success"] != null)
    {
        <div class="alert-cc success">
            <i class="bi bi-check-circle-fill"></i>
            <span>@TempData["Success"]</span>
            <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Header with Breadcrumb -->
    <div class="d-flex justify-content-between align-items-start mb-4 pb-3 border-bottom border-2" style="border-color: var(--border);">
        <div>
            <h1 class="page-title">Complaint Details</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 bg-transparent p-0">
                    <li class="breadcrumb-item"><a asp-action="Dashboard" class="text-decoration-none">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">#@issue.Id</li>
                </ol>
            </nav>
        </div>
        <a asp-action="Dashboard" class="btn btn-cc-outline">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    <div class="row g-4">
        <!-- Left Column: Details & Evidence -->
        <div class="col-lg-8">
            <!-- Main Details Card -->
            <div class="card-cc mb-4" style="border-top: 4px solid var(--yellow);">
                <div class="card-body p-4 p-lg-5">
                    
                    <div class="d-flex flex-wrap align-items-start justify-content-between gap-3 mb-4">
                        <div>
                            <span class="badge-category mb-2 d-inline-block">@issue.Category</span>
                            <div class="small text-muted mb-2">Reported on @issue.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy")</div>
                            <h2 class="fw-bold" style="color: var(--text);">@issue.Title</h2>
                        </div>

                        <span class="badge-cc @statusBadgeClass">
                            <i class="bi @statusIcon"></i> @issue.Status
                        </span>
                    </div>

                    <!-- Description -->
                    <div class="mb-4">
                        <label class="form-label-cc d-flex align-items-center gap-2">
                            <i class="bi bi-card-text"></i> Description
                        </label>
                        <div style="background: var(--bg); padding: 1.5rem; border-radius: 12px; border: 1px solid var(--border);">
                            <p style="color: var(--text); white-space: pre-wrap; line-height: 1.7; margin: 0;">@issue.Description</p>
                        </div>
                    </div>

                    <!-- Location & Contact Info -->
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="info-box-cc">
                                <div>
                                    <i class="bi bi-geo-alt" style="font-size: 1.5rem; color: var(--yellow);"></i>
                                </div>
                                <div>
                                    <span class="info-label">Location</span>
                                    <div class="info-value">@issue.City?.Name</div>
                                    <div class="small text-muted">@issue.LocationText</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-box-cc">
                                <div>
                                    <i class="bi bi-telephone" style="font-size: 1.5rem; color: var(--yellow);"></i>
                                </div>
                                <div>
                                    <span class="info-label">Citizen Contact</span>
                                    @if (!string.IsNullOrWhiteSpace(issue.ContactPhone))
                                    {
                                        <div class="info-value">@issue.ContactPhone</div>
                                        <div class="small text-muted">For updates</div>
                                    }
                                    else
                                    {
                                        <div class="text-muted fst-italic small">Not provided</div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Evidence Gallery -->
            <div class="card-cc no-hover">
                <div class="card-body p-4 p-lg-5">
                    <h5 class="fw-bold mb-4" style="color: var(--text);">
                        <i class="bi bi-images me-2" style="color: var(--yellow);"></i>Evidence Gallery
                    </h5>

                    @if (issue.Images == null || !issue.Images.Any(i => !string.IsNullOrWhiteSpace(i.ImageUrl)))
                    {
                        <div class="gallery-empty">
                            <i class="bi bi-image"></i>
                            <p class="mb-0">No images were uploaded with this complaint.</p>
                        </div>
                    }
                    else
                    {
                        <div class="gallery-grid">
                            @foreach (var img in issue.Images.Where(i => !string.IsNullOrWhiteSpace(i.ImageUrl)))
                            {
                                var modalId = $"imgModal_{img.Id}";
                                <div class="gallery-item" data-bs-toggle="modal" data-bs-target="#@modalId">
                                    <img src="@img.ImageUrl" alt="Evidence" loading="lazy" />
                                    <div class="gallery-item-overlay">
                                        <i class="bi bi-zoom-in"></i>
                                    </div>

                                    <!-- Modal -->
                                    <div class="modal fade" id="@modalId" tabindex="-1" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered modal-lg">
                                            <div class="modal-content bg-transparent border-0 shadow-none">
                                                <button type="button" class="btn-close btn-close-white position-absolute top-0 end-0 m-3 z-3 bg-dark p-2 rounded-circle" data-bs-dismiss="modal"></button>
                                                <div class="modal-body p-0 text-center">
                                                    <img src="@img.ImageUrl" class="img-fluid rounded" style="max-width: 90vw;" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Right Column: Status & Actions -->
        <div class="col-lg-4">
            <div class="sticky-top" style="top: 2rem;">
                
                <!-- Status & Action Card -->
                <div class="card-cc no-hover mb-4 @(issue.Status == IssueStatus.Resolved ? "status-card resolved" : issue.Status == IssueStatus.Pending ? "status-card pending" : "status-card")">
                    <div class="card-body p-4">
                        <h6 class="fw-bold text-uppercase small mb-3" style="color: var(--text); letter-spacing: 0.5px;">Update Status</h6>

                        <form asp-action="UpdateStatus" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="Issue.Id" />

                            <div class="mb-3">
                                <label class="form-label-cc">Current Status</label>
                                <div class="d-flex align-items-center mb-3">
                                    <div class="status-icon @(issue.Status == IssueStatus.Resolved ? "resolved" : issue.Status == IssueStatus.Pending ? "pending" : "")">
                                        <i class="bi @statusIcon"></i>
                                    </div>
                                    <div class="ms-3">
                                        <h5 class="mb-0 fw-bold" style="color: var(--text);">@issue.Status</h5>
                                        <div class="small text-muted">Last updated: @DateTime.Now.ToShortDateString()</div>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label-cc">Change Status</label>
                                <select asp-for="NewStatus" class="form-select-cc w-100">
                                    <option value="@IssueStatus.Pending">Pending</option>
                                    <option value="@IssueStatus.InProgress">In Progress</option>
                                    <option value="@IssueStatus.Resolved">Resolved</option>
                                </select>
                                <div class="form-text-cc">Change status to notify the citizen about updates.</div>
                            </div>

                            <button type="submit" class="btn btn-cc-primary w-100">
                                <i class="bi bi-check-lg"></i> Save Changes
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Reporter Info Card -->
                <div class="card-cc no-hover">
                    <div class="card-body p-4">
                        <h6 class="fw-bold mb-3" style="color: var(--text); text-transform: uppercase; font-size: 0.85rem; letter-spacing: 0.5px;">
                            <i class="bi bi-person-circle me-2" style="color: var(--yellow);"></i>Reporter Information
                        </h6>
                        
                        <div class="mb-3">
                            <div class="info-label">Name</div>
                            <div class="info-value">@issue.Citizen?.FullName</div>
                        </div>

                        <div class="mb-3">
                            <div class="info-label">Email</div>
                            <div class="text-muted small text-break">@issue.Citizen?.Email</div>
                        </div>

                        <div class="mb-3">
                            <div class="info-label">Phone</div>
                            <div class="text-muted small">
                                @(string.IsNullOrWhiteSpace(issue.ContactPhone) ? "Not provided" : issue.ContactPhone)
                            </div>
                        </div>

                        <a href="mailto:@issue.Citizen?.Email" class="btn btn-cc-outline w-100 btn-sm">
                            <i class="bi bi-envelope"></i> Contact Citizen
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
